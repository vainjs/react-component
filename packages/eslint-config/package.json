{
  "name": "@vainjs/eslint-config",
  "version": "0.0.0",
  "description": "Modern ESLint configuration for TypeScript and React projects with Prettier integration",
  "type": "module",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": "^18.18.0 || ^20.9.0 || >=21.1.0"
  },
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "rimraf dist && rolldown -c rolldown.config.ts && tsc --emitDeclarationOnly"
  },
  "files": [
    "dist",
    "package.json"
  ],
  "dependencies": {
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.30.1"
  },
  "peerDependencies": {
    "@eslint/js": "^9.25.0",
    "eslint": "^9.25.0",
    "prettier": "^3.5.3"
  },
  "keywords": [
    "eslint",
    "config",
    "react",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^18.18.0",
    "rimraf": "^6.0.1",
    "rolldown": "1.0.0-beta.34"
  }
}
